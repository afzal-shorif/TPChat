@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="modal fade" id="registrationModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="registrationModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="registrationModalLabel">Anonymous Login</h5>
            </div>
            <div class="modal-body">
                <form id="userRegistrationForm">
                    
                    <div class="row">
                        <div class="col">
                            <div class="row">
                                <label for="inputUsername" class="col-sm-2 col-form-label"><i class="fa-solid fa-user"></i></label>
                                <div class="col-sm-10">
                                    <input type="text" id="inputUsername" class="form-control form-control-sm" aria-describedby="usernameValidationMessage" placeholder="Username" required>
                                </div>
                            </div>                           
                        </div>
                        <div class="col">
                            <span id="usernameValidationMessage" class="form-text text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col">

                            <div class="row">      
                                <span class="col-sm-2 col-form-label"><i class="fa-solid fa-venus-mars"></i></span>
                                <div class="col-sm-10 pt-1">
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="inputGender" id="inputGenderMale" value="male" checked>
                                        <label class="form-check-label" for="inputGenderMale">Male</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="inputGender" id="inputGenderFemale" value="female">
                                        <label class="form-check-label" for="inputGenderFemale">Female</label>
                                    </div>
                                </div>
                            </div>
                            <!--
                            <div class="row">
                                <label for="inputCountry" class="col-sm-2 col-form-label"><i class="fa-solid fa-globe"></i></label>
                                <div class="col-sm-10">
                                    <select class="form-select form-select-sm" id="inputCountry">
                                        <option selected>Bangladesh</option>
                                        <option value="1">United State of America</option>
                                    </select>
                                </div>
                            </div> 
                            -->
                        </div>
                        <div class="col">
                            <div class="row">
                                <label for="inputAge" class="col-sm-2 col-form-label"><i class="fa-solid fa-calendar-days"></i></label>
                                <div class="col-sm-10">
                                    <input type="number" id="inputAge" class="form-control form-control-sm" placeholder="Age" required>
                                </div>
                            </div>
                            <!--
                            <div class="row">
                                <label for="inputRegion" class="col-sm-2 col-form-label"><i class="fa-solid fa-location-dot"></i></label>
                                <div class="col-sm-10">
                                    <select class="form-select form-select-sm" id="inputRegion">
                                        <option selected></option>
                                        <option value="1"></option>
                                        <option value="2"></option>
                                    </select>
                                </div>
                            </div>
                            -->
                           
                        </div>
                    </div>
                    <!--
                    <div class="row">
                        <div class="col">
                            I am not a robot
                        </div>
                    </div>
                    -->
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" id="registerUserBtn" class="btn btn-primary">Login</button>
            </div>
        </div>
    </div>
</div>
<div class="row mt-3">
    <div class="col d-flex flex-row border" id="wrapper">
        <div class="left-panel">
            <div class="channel-container d-flex flex-column private-channel-container">
                <div class="channel-header d-flex flex-row align-items-center">
                    <h5 class="flex-fill">Private</h5>
                    <i class="fa-solid fa-angle-down dropdown-arrow-private"></i>
                    <!--
                    <i class="fa-solid fa-angle-up"></i>
                    
                    <i class="fa-solid fa-magnifying-glass ml-3"></i>
                    -->
                </div>
                <div class="channel-list" id="privateChannelListContainer">
                    <!--
                    <ul class="list-group">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            A list item
                            <span class="badge bg-primary rounded-pill">14</span>
                        </li>                       
                    </ul>
                    -->
                </div>
            </div>

            <div class="channel-container d-flex flex-column public-channel-container">
                <div class="channel-header d-flex flex-row align-items-center">
                    <h5 class="flex-fill">Public</h5>
                    <i class="fa-solid fa-angle-down dropdown-arrow-public"></i>
                    <!--
                    <i class="fa-solid fa-angle-up"></i>
                    <i class="fa-solid fa-magnifying-glass ml-3"></i>
                    -->
                </div>
                <div class="channel-list" id="publicChannelListContainer">
                    <!--
                    <ul class="list-group">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            A list item
                            <span class="badge bg-primary rounded-pill">14</span>
                        </li>
                    </ul>
                    -->                 
                </div>
            </div>
            
        </div>
        <div class="flex-fill d-flex flex-column border bg-white p-2">
            <div class="flex-fill d-flex flex-column" id="msgWindow">
                <div class="d-flex flex-row msg-header pb-2">
                    <h5 class="flex-fill m-0">Channel Name</h5>
                    <span>Member: 120</span>
                </div>
                <div class="flex-fill msg-body" style="background: #ccc;">

                </div>
            </div>
            <div id="footerWrapper" class="d-flex flex-column pt-2">
                <div class="d-flex flex-row align-items-start">
                    <div class="flex-fill">
                        <!--
                        <div class="w-100 border rounded" id="msgInputField" style="max-height: 66px; overflow-y: auto; padding: 0px 5px 5px 5px; min-height: 32px;">
                            <p class="m-0"><span id="inputCursor">|</span></p>
                        </div>
                        -->
                        <input type="text" class="form-control" />

                    </div>
                    <button class="btn btn-primary btn-sm round ms-2" id="btnSendMsg"><i class="fa-solid fa-paper-plane"></i></button>
                </div>
                <div class="d-flex flex-row justify-content-start">
                    <button class="btn btn-sm"><i class="fa-solid fa-image"></i></button>
                    <button class="btn btn-sm"><i class="fa-solid fa-paperclip"></i></button>
                    <button class="btn btn-sm"><i class="fa-solid fa-microphone-lines"></i></button>
                    <!--
                    <button class="btn btn-sm"><i class="fa-solid fa-link"></i></button>
                    <button class="btn btn-sm"><i class="fa-solid fa-face-smile"></i></button>
                    -->                 
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
<script>
    const Urls = {
        registration: '@Url.Action("Index", "Registration")',
        validateUniqueUsername: '@Url.Action("IsUserNameAvailable", "Registration")',
        channel: '@Url.Action("Index", "Channel")',
        channelList: '@Url.Action("GetChannelList", "Channel")',
        updateUserStatus: '@Url.Action("UpdateActiveStatus", "Home")'
    }

    $(document).ready(function () {
        CimpleChat.UI.adjustMainContainerHeight();
        CimpleChat.UI.initEvents();
        CimpleChat.UserRegistration.initRegistration('#registrationModal');


        $(document).on('click', '.channel-name', function () {
            let channelId = $(this).attr('data-channel');
            window.location = Urls.channel + '/?channelId=' + channelId;
        });

        

        CimpleChat.Common.updateUserStatus(Urls.updateUserStatus);
        
        setInterval(
            function () {
                CimpleChat.Channel.getChannelList(CimpleChat.Channel.renderChannels)
            },
            15000
        );    
    });
</script>
}
        